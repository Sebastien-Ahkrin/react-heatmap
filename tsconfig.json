{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "rootDirs": ["src", "stories"],
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/__tests__"]
}
